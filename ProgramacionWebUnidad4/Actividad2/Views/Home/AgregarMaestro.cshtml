@model Actividad2.Models.Maestro
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{ Layout = "_Layout"; }

<h1>Agregar un nuevo maestro</h1>
<section id="datos">

    <form method="post" action="~/Home/AgregarMaestro">
        <label>Clave:</label>
        <input type="number" asp-for="Clave" required />
        <br />
        <label>Nombre completo:</label>
        <input type="text" asp-for="Nombre" required />
        <br />
        <label>Contraseña:</label>
        <input type="password" asp-for="Contrasena" required />
        <br />
        @Html.ValidationSummary()
        <input type="submit" value="Agregar" />
        <a href="~/Home/VerMaestros">Cancelar</a>
    </form>
</section>
