@model Actividad1.Models.Usuarios
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{ Layout = "_Layout"; }

    <h1>Regístrate en MercadoLibre</h1>
    <p>
        ¿Ya tienes cuenta?
        <a href="~/Home/IniciarSesion">Iniciar sesión</a>
    </p>
    <p>Llene los siguientes datos para crear su cuenta:</p>
    <form method="post" action="~/Home/Registrar">
        <input type="text" asp-for="Nombre" placeholder="Nombre de usuario" required />
        <br />
        <input type="email" asp-for="Correo" placeholder="Correo electrónico" required />
        <br />
        <input type="password" asp-for="Contrasena" name="contraseña1" placeholder="Contraseña" required />
        <br />
        <input type="password" asp-for="Contrasena" name="contraseña2" placeholder="Confirmar contraseña" required />
        @Html.ValidationSummary()
        <input type="submit" value="Regístrar" onclick="registrarUsuario()" />
        <br />
    </form>